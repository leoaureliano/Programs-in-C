#include <iostream>
using namespace std;

int main() {
    int n; //number of sides of a polygon
    int lines;
    
    
    cin >> n;
    
    if(n >= 3 && n <= 10**9){
        if( n == 4){
            lines = 2;
        }
        else {
        lines = (n -2);
    }
        cout << lines;
}
